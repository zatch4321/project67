<div id="dashboardContent" class="hidden">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Application Status Card -->
      <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 p-6">
        <h3 class="text-xl font-bold text-gray-200 mb-4">Application Status</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Status:</span>
            <span id="applicationStatus" class="px-3 py-1 bg-yellow-500/20 text-yellow-400 rounded-full text-sm">
              Under Review
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Submitted:</span>
            <span id="submissionDate" class="text-gray-300">2024-03-15</span>
          </div>
        </div>
      </div>

      <!-- Documents Card -->
      <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 p-6">
        <h3 class="text-xl font-bold text-gray-200 mb-4">Uploaded Documents</h3>
        <ul class="space-y-3" id="documentsList">
          <li class="flex items-center justify-between">
            <span class="text-gray-300">
              <i class="fas fa-file-pdf text-red-400 mr-2"></i>
              Resume.pdf
            </span>
            <a href="#" class="text-primary-400 hover:text-primary-300">
              <i class="fas fa-download"></i>
            </a>
          </li>
        </ul>
      </div>

      <!-- Profile Card -->
      <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 p-6">
        <h3 class="text-xl font-bold text-gray-200 mb-4">Profile Details</h3>
        <div class="space-y-3">
          <div>
            <label class="text-gray-400">Name:</label>
            <p id="profileName" class="text-gray-300">John Doe</p>
          </div>
          <div>
            <label class="text-gray-400">Email:</label>
            <p id="profileEmail" class="text-gray-300">john@example.com</p>
          </div>
          <div>
            <label class="text-gray-400">Skills:</label>
            <p id="profileSkills" class="text-gray-300">Machine Learning, Python, Data Science</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>